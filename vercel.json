{
    "builds": [{
            "src": "usg_counter/wsgi.py",
            "use": "@vercel/python",
            "config": { "maxLambdaSize": "15mb" }
        },
        {
            "src": "build_files.sh",
            "use": "@vercel/static-build",
            "config": { "distDir": "staticfiles_build" }
        }],
    "routes": [
        {
            "src": "/static/(.*)",
            "dest": "/static/"
        },
        {
            "src": "/(.*)",
            "dest": "usg_counter/wsgi.py"
        }
    ]
}